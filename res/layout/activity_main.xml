<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.apps.resto.MainActivity"
    android:background="#FFFFFF" >

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRemark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/btn_order"
        android:textColor="#444444"
        android:textStyle="bold"
        android:textSize="20sp"
        android:shadowRadius="0.6"
        android:shadowDx="3"
        android:shadowDy="3"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:background="@drawable/custom_btn_order" />

    <TextView
        android:id="@+id/txtRemark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="165dp"
        android:text="@string/order_remark" />

    <ImageView
        android:id="@+id/imgOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtRemark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="49dp"
        android:contentDescription="@string/order_remark" />

</RelativeLayout>